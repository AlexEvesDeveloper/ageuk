{% extends '::base.html.twig' %}

{% block body %}
<div class="col-md-6 col-md-offset-3 margin-top-30">
	<h4>Course details</h4>
	<ul class="list-group">
		<li class="list-group-item">
			{{course.title}}
		</li>
	</ul>
</div>

{% if upcomingEvents|length > 0 %}
<div class="col-md-6 col-md-offset-3 margin-top-30">
	<h4>Upcoming events</h4>
	<ul class="list-group">
	{% for event in upcomingEvents %}
		<li class="list-group-item">
			<a href="{{path('ageuk_event_view_index', {'event':event.id})}}">
				{{event.date|date("F j, Y, g:i a")}}
			</a>
		</li>
	{% endfor %}
	</ul>
</div>
{% endif %}

{% if pastEvents|length > 0 %}
<div class="col-md-6 col-md-offset-3 margin-top-30">
	<h4>Past events</h4>
	<ul class="list-group">
	{% for event in pastEvents %}
		<li class="list-group-item">
			<a href="{{path('ageuk_event_view_index', {'event':event.id})}}">
				{{event.date|date("F j, Y, g:i a")}}
			</a>
		</li>
	{% endfor %}
	</ul>
</div>
{% endif %}

<div class="col-md-6 col-md-offset-3 margin-top-30">
	<button class="btn btn-success" data-toggle="modal" data-target="#new-event">Create a new Event for this Course</button>
</div>

<div id="new-event" class="modal fade" style="display:none;">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				Create a new Event
			</div>
			<div class="modal-body overflow-hidden">
				{{render(controller('AgeukEventBundle:New:index'))}}
			</div>
			<div class="modal-footer">
				<button class="btn btn-danger" type="button" data-dismiss="modal">Cancel</button>
			</div>
		</div>
	</div>
</div>
{% endblock %}